@model Restaurant.Models.ShoppingCart
@using Restaurant.Extensions
@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br />
<br />
<div class="border backgrounWhite">
    <div class="row">
        <div class="col-6">
            <h2 class="text-info">Szczegóły</h2>
        </div>
    </div>

    <br />

    <div>
    </div>

    <form method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input asp-for="MenuItemId" type="hidden" />
        <div class="row">
            <div class="col-12 pb-4 d-md-none">
                <img src="@Model.MenuItem.Image" width="100%" style="border-radius: 5px; border: 1px solid #bbb9b9" />
            </div>
            <div class="col-md-8">
                <div class="form-group row">
                    <div class="col-md-4">
                        <label asp-for="MenuItem.Name" class="text-info font-weight-bold"></label>
                    </div>
                    <div class="col-md-8">
                        <input asp-for="MenuItem.Name" readonly class="form-control" />
                    </div>
                    <span asp-validation-for="MenuItem.Name" class="text-danger"></span>
                </div>
                <div class="form-group row">
                    <div class="col-md-4">
                        <label asp-for="MenuItem.Description" class="text-info font-weight-bold"></label>
                    </div>
                    <div class="col-md-8">
                        <div class="border p-2">
                            @Html.Raw(Model.MenuItem.Description)
                        </div>
                    </div>
                    <span asp-validation-for="MenuItem.Description" class="text-danger"></span>
                </div>
                <div class="form-group row">
                    <div class="col-md-4">
                        <label asp-for="MenuItem.Price" class="text-info font-weight-bold"></label>
                    </div>
                    <div class="col-md-8">
                        <input asp-for="MenuItem.Price" readonly class="form-control" />
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-md-4">
                        <label asp-for="MenuItem.CategoryId" class="text-info font-weight-bold"></label>
                    </div>
                    <div class="col-md-8">
                        <input asp-for="MenuItem.Category.Name" readonly class="form-control" />
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-md-4">
                        <label asp-for="MenuItem.SubCategoryId" class="text-info font-weight-bold"></label>
                    </div>
                    <div class="col-md-8">
                        <input asp-for="MenuItem.SubCategory.Name" readonly class="form-control" />
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-md-4">
                        <label asp-for="MenuItem.Additions" class="text-info font-weight-bold"></label>
                    </div>
                    <div class="col-md-8">
                        <select disabled asp-for="MenuItem.Additions" asp-items="Html.GetEnumSelectList<MenuItem.EAdditions>()" class="form-control"></select>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-md-4">
                        <label asp-for="Count" class="text-info font-weight-bold"></label>
                    </div>
                    <div class="col-md-8">
                        <input asp-for="Count" class="form-control" />
                        <span asp-validation-for="Count" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-md-4">
                    </div>
                    <div class="col-md-4">
                        <a asp-action="Index" class="btn btn-success form-control">Wróć</a>
                    </div>
                    <div class="col-md-4">
                        <button type="submit" value="Dodaj do koszyka" class="btn btn-primary form-control">Dodaj do koszyka</button>
                    </div>
                </div>
            </div>
            <div class="col-3 offset-1 d-none d-md-block">
                <img src="@Model.MenuItem.Image" width="100%" style="border-radius: 5px; border: 1px solid #bbb9b9" />
            </div>
        </div>
    </form>
</div>



@section Scripts{
    <script>
        tinymce.init({
            selector: 'textarea',
            plugins: "lists",
            menubar: 'file edit format'
        })
    </script>

    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}